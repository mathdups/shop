
    <div class="row">
      <div class="col-md-12">
        <div class="registration-new">
          <div class="panel panel-default devise-bs">         
            <div class="panel-body">                     
               <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { role: 'form', class: 'form-horizontal', id: "reg_form", method: "put" }) do |f| %>
                <div class="form-group">
                  <%= f.label :first_name, class: 'col-md-4 control-label'%>
