                }
            },
            
	
	          'user[email]': {
                validators: {
                    notEmpty: {
                        message: 'Please supply your email address'
                    },
                    emailAddress: {
                        message: 'Please supply a valid email address'
                    }
                }
            },
					
	          'user[password]': {
              validators: {
                stringLength: {
                        min: 6,
                    },
                identical: {
                    field: 'user[password_confirmation]',
