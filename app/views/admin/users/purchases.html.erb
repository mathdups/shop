

<div class="container">
  <div class="row">
    <h1>Tableau de bord Purchases (<%= @user.email %>)</h1>
        <div class="col-md-6">
          <h3> <strong>Infos de livraison:</strong> </h3>
          <li>Email:<%= @user.email %></li>
          <li>Prénom:<%= @user.first_name %> </li>
          <li>Nom:<%= @user.last_name %> </li>
          <li>Address: <%= @user.address %> </li>
          <li>Code Postal: <%= @user.postal_code %> </li>
          <li>City: <%= @user.city %> </li>
          <li>Country: <%= @user.country %> </li>
        </div>
        <div class="col-md-6">
      <% @purchases.each do |purchase| %>
          <h3> <strong>Information Commande:</strong> </h3>
          <h4> La commande a-t-elle été envoyée ? </h4>

          <%= form_for purchase do |f| %>
<%= f.check_box :is_sent, 'data-toggle' => 'toggle', id: "toggle",
      data: {
        remote: true,
        url: url_for(action: :update, controller: :purchases, id: purchase.id),
        method: "PATCH"
      }  %>
<% end %>
          <% @orders.where(id: purchase.order_id).each do |order| %>         
            <li> Date de l'achat: <%= purchase.created_at %> </li>
            <li>Montant de l'achat: <%=  purchase.amount %>€ </li>
            <li> Status de la commande: <%= order.status %></li>
            <h4> Détails de la commande: </h4>
            <% order.items.each do |item| %><li> 
              <li>Nom du produit: <%= item.product.title %></li>
              <li> Prix du produit: <%= item.product.price %></li>
              <li> Quantité de produit: <%= item.quantity %> </li>
              <br>         
            <% end %>
          <% end %>
      <% end %>    
        </div>         
  </div>
</div>


<script>
$(function() {
    $('#toggle').bootstrapToggle('toggle');
  })

</script>
