   <%= simple_form_for @product, url: admin_product_path, method: "patch" do |f| %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.label :price %>
      <%= f.text_field :price, class: 'form-control' %>

      <%= f.label :short_description %>
      <%= f.text_field :short_description, class: 'form-control' %>

      <%= f.label :category_id %>
      <%= f.input :category_id, label: "Catégorie associée", collection: Category.all, include_blank: false, html: { class: 'form-control' } %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>