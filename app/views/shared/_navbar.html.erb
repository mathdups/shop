

  <div class="navbar-shop sticky">
    <!-- Logo -->

  <div class="weedlife-logo">
    <%= link_to root_path  do %>  
        <img src="http://localhost:3000/weedlife-logo.png" >
        
        <% end %> 
    </div>
    
    <!-- Right Navigation -->
    <div class="navbar-shop-right hidden-xs hidden-sm">

      <% if user_signed_in? %>


        <!-- Links when logged in -->
          <% if current_user.admin? %>
            <%= link_to "Admin", admin_dashboard_path, class:"navbar-shop-item navbar-shop-link" %> 
        <% end %>
        <%= link_to "Home", root_path, class:"navbar-shop-item navbar-shop-link " %>
        <%= link_to order_items_path, class:"navbar-shop-item1 navbar-shop-link1" do %>  
        <i class="fas fa-shopping-cart" path="order_items_path"></i>
        <% end %>  (

        <%= link_to pluralize(current_cart.items_count, ''), cart_path, class:"navbar-shop-item1 navbar-shop-link1" %>)
      <!-- Avatar with dropdown menu -->
        <div class="navbar-shop-item">
          <div class="dropdown">
            <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbar-shop-menu", "data-toggle" => "dropdown" %>
            <ul class="dropdown-menu dropdown-menu-right navbar-shop-dropdown-menu">
              <li>
                <%= link_to edit_user_registration_path do %>
                  <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_registration_path, method: :get do %>
                  <i class="fa fa-cog"></i>  <%= t(".settings", default: "Settings") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      <% else %>
        <!-- Login link (when logged out) -->
        <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-shop-item navbar-shop-link" %>
        <%= link_to "Home", root_path, class:"navbar-shop-item navbar-shop-link " %>
        <%= link_to order_items_path, class:"navbar-shop-item1 navbar-shop-link1" do %>  
          <i class="fas fa-shopping-cart" path="order_items_path"></i>
        <% end %>  (

        <%= link_to pluralize(current_cart.items_count, ''), cart_path, class:"navbar-shop-item1 navbar-shop-link1" %>)
      <% end %>
    </div>

    <!-- Dropdown list appearing on mobile only -->
    <div class="navbar-shop-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-shop-dropdown-menu">
          <li><a href="#">Some mobile link</a></li>
          <li><a href="#">Other one</a></li>
          <li><a href="#">Other one</a></li>
        </ul>
      </div>
    </div>
  </div>
