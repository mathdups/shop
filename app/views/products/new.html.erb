


<%= simple_form_for @product, url: category_products_path, method: "post" do |f| %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :short_description %>
  <%= f.input :price %>
  <%= f.submit "save product" %>
<% end %>

