<div class="wrapper">
    <div class="product-img">
      <%= cl_image_tag @product.photo, height: 420, width: 327, crop: :fill %>
    </div>
    <div class="product-info">
      <div class="product-text">
        <h1><%= @product.title %> </h1>
        <h2><%= @product.short_description %></h2>
        <p><%=@product.description%></p>
      </div>
      <div class="product-price-btn">
        <p><span><%= @product.price %> </span>â‚¬</p>
        

       <button> <%= link_to cart_path, type: 'button', label: 'buy now', method: 'post' %> </button>

      
        
      </div>
    </div>
  </div>


  <ol>
  
    <li> 
      <%= @product.title %> (<%= number_to_currency @product.price %>)

      <%= form_tag order_items_path do %>
        <%= hidden_field_tag :product_id, @product.id %>
        <%= number_field_tag :quantity, 1 %>
        <%= submit_tag "Add to Cart" %>  
<%
=begin %>
      <ul>
        <% product.variants.each do |variant| %>
          <li><%= variant.title %> (<%= number_to_currency variant.price %>)</li>
        <% end %>
      </ul> >
      <%
=end %>
    </li>
  <% end %>
</ol>

