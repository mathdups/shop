
<!DOCTYPE html>
<html>


    <h1>Shopping Cart</h1>

    <div class="shopping-cart">

      <div class="column-labels">
        <label class="product-image">Image</label>
        <label class="product-details">Product</label>
        <label class="product-price">Price</label>
        <label class="product-quantity">Quantity</label>
        <label class="product-removal">Remove</label>
        <label class="product-line-price">Total</label>
      </div>
      <% @items.each do |item| %> 
          <div class="product">
            <div class="product-image">
              <img src="https://s.cdpn.io/3/dingo-dog-bones.jpg">
            </div>
            <div class="product-details">
              <div class="product-title"><%= link_to item.product.title, product_cart_path(item.id, item.product_id) %></div>
              <p class="product-description">The best dog bones of all time. Holy crap. Your dog will be begging for these things! I got curious once and ate one myself. I'm a fan.</p>
            </div>
            <div class="product-price"><%= item.product.price %></div>
            <div class="product-quantity">
              <input type="number" value='<%= item.quantity %>' min="1">
            </div>
            <div class="product-removal">      
                <%= simple_form_for item, method: :delete do |f| %>
                  <%= f.submit "Remove" %>
                <% end %>   
            </div>
            <div class="product-line-price">
              <%= item.price * item.quantity %>
            </div>
          </div>
        <% end %>

      
      

      <div class="totals">
        <div class="totals-item">
          <label>Subtotal</label>
          <div class="totals-value" id="cart-subtotal"><%= current_cart.sub_total %></div>
        </div>
        <div class="totals-item">
          <label>Tax (5%)</label>
          <div class="totals-value" id="cart-tax">3.60</div>
        </div>
        <div class="totals-item">
          <label>Shipping</label>
          <div class="totals-value" id="cart-shipping">15.00</div>
        </div>
        <div class="totals-item totals-item-total">
          <label>Grand Total</label>
          <div class="totals-value" id="cart-total"> <%= current_cart.sub_total + 3.60 + 15 %> </div>
        </div>
      </div>
          
          <button class="checkout"><%= link_to 'Checkout', checkout_path %></button>
          

    </div>
  </html>


  








