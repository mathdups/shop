<div class="container">
  <ul>
    <% @categories.each do |category| %>
    <li>
      <%= link_to category_path(category) do %>
              <h4> <%= category.title %> 
              (<%= category.products.count %> products!) </h4> 
            <% end %> 
        <% Product.where(category_id: category.id).each do |product| %>
          <div class="row">
            <div class="col-md-4">
              <div class="card-container" >
                <figure class="card card-product">
                  <div class="img-wrap"><%= cl_image_tag product.photo, height: 400, width: 500, crop: :fill %></div>
                  <figcaption class="info-wrap">
                      <h4 class="title"><%= link_to category_product_path(category.id, product.id) do %> 
                      <%= product.title %> <% end %>
                      <h6 class="desc"><%= product.short_description %></h6>
                      <div class="rating-wrap">
                        <div class="label-rating">132 reviews</div>
                        <div class="label-rating">154 orders </div>
                      </div> <!-- rating-wrap.// -->
                  </figcaption>
                  <div class="bottom-wrap">
                  <%= form_tag order_items_path do %>
                  <%= hidden_field_tag :product_id, product.id %>
                  <%= hidden_field_tag :category_id, category.id %>
                  <%= number_field_tag :quantity, 1 %>
                  <%= submit_tag "Add to Cart" %>	<% end %>
                    <div class="price-wrap h5">
                      <span class="price-new"><%= number_to_currency product.price %></span> <del class="price-old">$1980</del>
                  </div> <!-- price-wrap.// -->
                </div> <!-- bottom-wrap.// -->
              </figure>
            </div>
          </div> <!-- col // -->
        <% end %>
      </li>
    <% end %>
  <ul>
</div>



