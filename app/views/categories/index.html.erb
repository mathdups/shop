<div class="banner" >
  <div class="banner-content">
    <h1>WELCOME TO W33D4LIF3</h1>
    <p>Venez découvrir les vertus de l'herbe légale.</p>
  </div>
</div>
<div class="container"> 

    <% @categories.each do |category| %>
      <li>
        <%= link_to category_path(category) do %>
          <h1> <%= category.title %> 
          (<%= category.products.count %>) </h1> 
        <% end %> 
  
        <div class="container-fluid">
          <div class="row">
            <% Product.where(category_id: category.id).each do |product| %>
              <div class="col-xs-12 col-sm-6 col-md-4 col-md-4">
                <div class="card-container" >
                  <figure class="card card-product">
                    <div class="img-wrap"><%= cl_image_tag product.photo, height: 400, width: 500, crop: :fill %></div>
                    <figcaption class="info-wrap">
                        <%= link_to category_product_path(category.id, product.id) do %>
                          <h3><%= product.title %> <% end %> </h3> 
                        <div class="desc">
                          <p><%= product.short_description %>
                          <%= link_to category_product_path(category.id, product.id) do %>
                            <i class="far fa-arrow-alt-circle-right"></i></p> 
                            <%end%>
                          <div class="price-wrap">
                            <span class="price-new"><%= number_to_currency product.price %></span>
                            <del class="price-old"><%=number_to_currency product.price * 1.02 %> </del> 
                          </div>
                        </div>
                        <!-- rating-wrap.// -->
                    </figcaption>
                    <div class="bottom-wrap">
                      <form class="form-inline" action="/cart/items" method="POST">
                        <div class="form-group">                 
                            <%= hidden_field_tag :product_id, product.id %>
                            <%= hidden_field_tag :category_id, category.id %>
                            <%= hidden_field_tag :photo, product.photo %>
                            <%= number_field_tag :quantity, 1, class: "form-control", min: "1", max: "10"%>      
                        </div>
                        <div class="form-group col-sd-4"> 
                          <%= submit_tag "Add to Cart", class: "btn btn-primary" %>	
                        </div>
                      </form>
                        

                      <!-- price-wrap.// -->
                    </div> <!-- bottom-wrap.// -->
                  </figure>
                </div>
              </div> <!-- col // --> 
            <% end %> 
          </div>      
        </div>
    </li>
  <% end %>
</div>










